[MASTER]
ignore=.venv,build,dist,tests,__pycache__
extension-pkg-whitelist=
jobs=0
persistent=yes
unsafe-load-any-extension=no
py-version=3.14

[MESSAGES CONTROL]
disable=
    C0114, ; missing-module-docstring
    C0115, ; missing-class-docstring
    C0116, ; missing-function-docstring
    W0511, ; fixme / todo
    R0903, ; too-few-public-methods
    R0913, ; too-many-arguments
    R0914, ; too-many-locals
    R0915, ; too-many-statements
    R1705, ; unnecessary-else-return
    W1203, ; logging-fstring-interpolation
    W0613, ; unused-argument (useful for abstract bases / callbacks)

[FORMAT]
max-line-length=100
indent-string='    '
expected-line-ending-format=LF

[BASIC]
good-names=i,j,k,v,_,
argument-naming-style=snake_case
attr-naming-style=snake_case
variable-naming-style=snake_case
class-naming-style=PascalCase
const-naming-style=UPPER_CASE
function-naming-style=snake_case
method-naming-style=snake_case
module-naming-style=snake_case

[TYPECHECK]
ignore-mixin-members=yes
ignored-modules=numpy,torch,OpenGL,cython
ignored-classes=optparse.Values,thread._local
generated-members=torch.*,cv2.*,numpy.*,cython.*

[DESIGN]
max-args=12
max-locals=25
max-returns=6
max-branches=20
max-statements=80

[REPORTS]
output-format=colorized
score=no
